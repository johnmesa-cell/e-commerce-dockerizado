[mysqld]
server-id = 1
log-bin = mysql-bin
binlog_format = ROW                    # ← FALTA (crítico para replicación)
binlog-do-db = ecommerce

# Performance y seguridad
max_connections = 200                  # ← FALTA
innodb_buffer_pool_size = 256M         # ← FALTA
sync_binlog = 1                        # ← FALTA (seguridad)
binlog_expire_logs_seconds = 604800    # ← FALTA (limpieza de logs)

# Character set
character-set-server = utf8mb4         # ← FALTA (importante)
collation-server = utf8mb4_unicode_ci  # ← FALTA
