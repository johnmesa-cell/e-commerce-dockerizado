[mysqld]
server-id = 2
relay-log = mysql-relay-bin
log_bin = mysql-bin                    # ← FALTA (necesario para failover)
binlog_format = ROW                    # ← FALTA

read_only = 1
super_read_only = 1                    # ← FALTA (más seguro)

# Performance
max_connections = 200                  # ← FALTA
innodb_buffer_pool_size = 256M         # ← FALTA

# Character set
character-set-server = utf8mb4         # ← FALTA
collation-server = utf8mb4_unicode_ci  # ← FALTA

